<%- include('includes/head') %>
<title>Login</title>
</head>
<body>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
        <h1 class="text-center">Faça login</h1>
        <p class="text-center lead">Entre em sua conta</p>
    
        <%- include('includes/messages') %>

        <div class="row">
            <div class="col-lg">
                <h4>Fazer login</h4>
                <form action="/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                      <label for="email">Seu email</label>
                      <input type="email" class="form-control" name="email" placeholder="Coloque seu email">
                    </div>
                    <div class="form-group mt-3">
                        <label for="password">Sua senha</label>
                        <input type="password" class="form-control" name="password" placeholder="Coloque sua senha">
                      </div>
                    <button type="submit" class="btn btn-primary mt-3">Entrar</button>
                    <div class="mt-3">
                      Não tem uma conta? <a href="/register">Registre-se</a>
                    </div>
                  </form>
            </div>
        </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>