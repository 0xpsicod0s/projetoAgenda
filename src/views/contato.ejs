<%- include('includes/head') %>
<title>Contato</title>
</head>
<body>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Contato</h1>
      <p class="text-center">Crie ou edite seu contato</p>

      <%- include('includes/messages') %>

      <% if (contato._id) { %>
        <form action="/edit/<%= contato._id %>" method="POST">
      <% } else { %>
        <form action="/registerContact" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" placeholder="Nome do contato">
        </div>
        <div class="form-group">
          <label for="sobrenome">Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" placeholder="Sobrenome do contato">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email" placeholder="Email do contato">
        </div>
        <div class="form-group">
          <label for="telefone">Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" placeholder="Telefone do contato">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>